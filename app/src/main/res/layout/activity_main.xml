<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AugmentedImageActivity">


    <fragment android:name="com.u16033361.ar.individualproject.samples.augmentedimage.AugmentedImageFragment"
        android:id="@+id/ux_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


  <ImageView
      android:id="@+id/image_view_fit_to_scan"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:scaleType="fitCenter"
      android:src="@drawable/fit_to_scan4"
      android:contentDescription="@string/fit_image_to_scan"
      />

    <ImageView
        android:id="@+id/image_item_detected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/item_detected3"
        android:contentDescription="Item Detected"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:text="In Development Model">
    </TextView>
</FrameLayout>
